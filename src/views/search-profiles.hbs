<main class="page-content search-profiles">

    <section class="main-section">
        <h1>Search Profiles of your Cohort</h1>
    
        <form class="form" method="/post" action="">
            <label for="search">Search name</label>
            <input type="text" name="search" value="">

            <label for="submit">Submit</label>
            <button type="button" id="submit" value""></button>
        
            <div class="language-search">
                <input type="submit" class="button-submit html" value="HTML"/>
                <input type="submit" class="button-submit css" value="CSS"/>
                <input type="submit" class="button-submit js" value="JS"/>
                <input type="submit" class="button-submit sql" value="SQL"/>
            </div>
        </form>

    </section>

    <section class="main-section">
        <ul id="profile">
        {{#each users}}
        <li>
            Name: {{name}} <br>
            BIO: {{bio}} <br>
            Skills: <br> 
            HTML level:
            <div class={{barchart html}}>
            </div>
            CSS level:
            <div class={{barchart css}}>   
            </div>
            JS level:
            <div class={{barchart js}}>
                
            </div>
            SQL level 
            <div class={{barchart sql}}>
                
            </div>
            NODE level:
               <div class={{barchart node}}>
                
            </div>

        </li>
        {{/each}}
        </ul>

    </section>

    
        




</main>